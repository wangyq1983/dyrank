.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


.headerT{
  display: flex;
  flex-direction: row;
  justify-content: center
}
.sub_menu_box{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  height:40px;
  border-bottom: 1px solid #333;
  position: fixed;
  top:0;
  left:0;
  right:0;
  z-index: 9;
  background: #fff;
}
.sub_menu_item{
  display: flex;
  flex-direction:column;
  justify-content:center;
  font-size: 16px;
  padding:0 10px;
}
.sub_menu_item.cur{
  border-bottom: 3px solid #f00;
}
.scrollStyle{
  margin-top: 46px;
}
.listStyle1{
  height:40px;
}
.listStyle1:nth-child(1){
  background: #f00;
}
.listStyle1:nth-child(2){
  background: #99f;
}
.listStyle1:nth-child(3){
  background: #ff0;
}
.listContainer{
  margin-top:0;
}